@model List<UsuarioModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>Lista Usuario</h3>
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Usuario" class="btn btn-outline-success">Crear Nuevo</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Empresa</th>
                    <th>Correo</th>
                    <th>Acceso</th>
                    <th>Estatus</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Empresa</td>
                        <td>@item.Correo</td>
                        <td>@(item.IdAcceso == 1 ? "Administrador" : "Usuario")</td>
                        <td>
                            @switch (item.IdStatus)
                            {
                                case 1:
                                    @:Activo
                                    break;
                                case 2:
                                    @:Inactivo
                                    break;
                                case 3:
                                    @:Eliminado
                                    break;
                                default:
                                    @:Desconocido
                                    break;
                            }
                        <td>
                            <a asp-action="Editar" asp-controller="Usuario" class="btn btn-outline-primary btn-sm" asp-route-Token="@item.Token" >Editar</a>
                            <a asp-action="Eliminar" asp-controller="Usuario" class="btn btn-outline-danger btn-sm" asp-route-Token="@item.Token">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

