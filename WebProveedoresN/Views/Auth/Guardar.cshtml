@model WebProveedoresN.DTOs.RegisterDTO
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = TempData["Message"] as string;
}
<div class="card">
    <div class="card-header">
        <h3>Crear Contacto</h3>
    </div>
    <div class="card-body">

        <form asp-action="Guardar" asp-controller="Start" method="post">
@*             <input asp-for="SupplierName" type="hidden" class="form-control" />
            <input asp-for="SupplierCode" type="hidden" class="form-control" />
 *@            @if (!string.IsNullOrEmpty(message))
            {
                <div class="alert alert-info">
                    @message
                </div>
            }
            <div class="mb-3">
                <label class="form-label">@Html.DisplayNameFor(model => model.FullName):</label>
                <input asp-for="FullName" type="text" class="form-control">
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">@Html.DisplayNameFor(model => model.Email):</label>
                <input asp-for="Email" type="text" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">@Html.DisplayNameFor(model => model.Password):</label>
                <input asp-for="Password" type="password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            @if (message != null)
            {
                <div class="alert alert-success" role="alert">
                    @message
                </div>
            }
            <button type="submit" class="btn btn-outline-primary">Guardar</button> |
            <a asp-action="Listar" asp-controller="Start" class="btn btn-outline-warning"> Volver a la lista</a>
        </form>

    </div>
</div>

