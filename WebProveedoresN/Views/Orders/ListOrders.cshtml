@model IEnumerable<WebProveedoresN.Models.OrderDTO>

@{
    ViewData["Title"] = "Órdenes de Compra";
}
@Html.AntiForgeryToken()

<div class="card">
    <div class="card-header">
        <h2 class="text-center">Órdenes de Compra para: </h2>
        <h2 class="text-center">@ViewBag.Empresa</h2>
    </div>
    <div class="card-body">
        <p>
            <a asp-action="ListOrders" class="btn btn-outline-success"><i class="bi bi-arrow-repeat"></i>  Actualizar</a>
        </p>
        <hr />
        <table class="table text-center">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(Model => Model.OrderNumber)</th>
                    <th>@Html.DisplayNameFor(Model => Model.OrderDate)</th>
                    <th>@Html.DisplayNameFor(Model => Model.TotalAmount)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Currency)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Status)</th>
                    <th>Documentos</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.OrderNumber</td>
                        <td>@item.OrderDate.ToShortDateString()</td>
                        <td>@item.TotalAmount.ToString("C")</td>
                        <td>@item.Currency.ToString()</td>
                        <td>@item.Status.ToString()</td>
                        <td>
                            <button class="btn btn-outline-secondary btn-sm" onclick="mostrarDocumentos('@item.OrderNumber', 0)">
                                <i class="bi bi-cloud-download-fill"></i> Mostrar Factura(s)
                            </button>
                            <a asp-action="Upload" asp-controller="Archivos" asp-route-orderNumber="@item.OrderNumber" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-cloud-upload-fill"></i> Cargar Facturas
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="documentModal" tabindex="-1" aria-labelledby="documentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="documentModalLabel">Facturas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="documentList">

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function mostrarDocumentos(orderNumber, converted) {
            $.ajax({
                url: '@Url.Action("ObtenerDocumentos", "Archivos")',
                type: 'GET',
                data: { orderNumber: orderNumber, converted: converted },
                success: function (response) {
                    if (response.success) {
                        var documentList = $('#documentList');
                        documentList.empty();
                        response.documents.forEach(function (document) {
                            var link = $('<a>')
                                .attr('href', '/UploadedFiles/' + document.name + document.extension)
                                .attr('target', '_blank')
                                .text(document.name);
                            documentList.append($('<div>').append(link));
                        });
                        $('#documentModal').modal('show');
                    } else {
                        alert(response.message);
                    }
                }
            });
        }
    </script>
}