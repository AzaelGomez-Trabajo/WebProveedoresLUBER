@using WebProveedoresN.Entities
@model List<OrderDetail>
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    OrderDetail? details = null;
}
@Html.AntiForgeryToken()
@if (Model is null)
{
    <p>No se encontraron detalles para esta orden.</p>
}
else
{
    <div class="card">
        <div class="card-header">
            <h2 class="text-center">Detalles de la Orden de Compra @ViewBag.OrderNumber</h2>
            <p>
                <a asp-action="Details" asp-route-orderNumber="@ViewBag.OrderNumber" class="btn btn-outline-success btn-sm"><i class="bi bi-arrow-repeat">  Actualizar</i></a>
                <a asp-action="ListOrders" class="btn btn-outline-info btn-sm"><i class="bi bi-arrow-left-circle">  Regresar</i></a>
            </p>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-4">
                    <div class="mb-3">
                        <p><strong>Número de Orden:</strong> @ViewBag.OrderNumber</p>
                        <p><strong>Fecha:</strong> @(ViewBag.OrderDate != null ? ((DateTime)ViewBag.OrderDate).ToShortDateString() : "No disponible")</p>
                        <p><strong>Importe Total:</strong> @(ViewBag.TotalAmount != null ? ((decimal)ViewBag.TotalAmount).ToString("C") : "No disponible")</p>
                        <p><strong>Moneda:</strong> @(ViewBag.Currency ?? "No disponible")</p>
                        <p><strong># Factura(s):</strong> @(ViewBag.Invoices ?? "0")</p>
                        <p><strong>Monto factura(s):</strong> @(ViewBag.TotalInvoices != null ? ((decimal)ViewBag.TotalInvoices).ToString("C") : "0")</p>
                        <div>
                            <form asp-action="Upload" asp-controller="Files" method="get" style="display:inline;">
                                <input type="hidden" name="orderNumber" value="@ViewBag.OrderNumber" />
                                <input type="hidden" name="supplierCode" value="@ViewBag.SupplierCode" />
                                <input type="hidden" name="documentType" value="@ViewBag.DocumentType" />
                                <button type="submit" class="btn btn-outline-primary btn-sm" @((decimal)ViewBag.TotalAmount <= (decimal)ViewBag.TotalInvoice ? "disabled" : "")>
                                    <i class="bi bi-cloud-upload-fill"> Cargar</i>
                                </button>
                            </form>
                            <button class="btn btn-outline-secondary btn-sm" onclick="mostrarDocumentos(@ViewBag.OrderNumber)">
                                <i class="bi bi-cloud-download-fill"> Mostrar</i>
                            </button>
                            <button class="btn btn-outline-danger btn-sm" onclick="cerrarEmbed(@ViewBag.OrderNumber)" style="display: none">
                                <i class="bi bi-x-circle-fill"> Cerrar</i>
                            </button>

                            <div id="embed-container-@ViewBag.OrderNumber" style="display:none;">
                                <div id="embed-list-@ViewBag.OrderNumber"></div>
                            </div>
                        </div>
                    </div>
                </div>
                @if (ViewBag.DocumentType == "Pedido")
                {
                    <div class="col-8">
                        <div class="mb-3">
                            <label><strong>Entrada de Mercancía</strong></label>
                            @if (Model != null && Model.Any())
                            {
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th class="text-center">#</th>
                                            <th class="text-center">Codigo producto</th>
                                            <th class="text-center">Moneda</th>
                                            <th class="text-center">Total</th>
                                            <th class="text-center">Monto</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            details = item;
                                            @if (details.DocNum != 0)
                                            {
                                                <tr>
                                                    <td><input type="checkbox" name="selectedDocuments" value="@details!.DocNum" /></td>
                                                    <td>@details.DocNum</td>
                                                    <td>@details.ItemCode</td>
                                                    <td>@details.DocCur</td>
                                                    <td>@string.Format("{0:C4}", details.Total)</td>
                                                    <td>@string.Format("{0:N2}", details.Quantity)</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p>Todavía no se ha cargado la entrada de mercancia</p>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-8">
                        <div class="mb-3">
                            <label><strong>Ingrese su factura, por favor</strong></label>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
@section Scripts {
    <script>
        function mostrarDocumentos(orderNumber) {
            $.ajax({
                url: '@Url.Action("ObtenerDocumentos", "Files")',
                type: 'GET',
                data: { orderNumber: orderNumber },
                success: function (response) {
                    if (response.success) {
                        var embedContainer = $('#embed-container-' + orderNumber);
                        var embedList = $('#embed-list-' + orderNumber);
                        var closeButton = $('button[onclick="cerrarEmbed(' + orderNumber + ')"]');
                        embedList.empty();
                        if (response.documents.length > 0) {
                            response.documents.forEach(function (document) {
                                var embedElement = $('<embed>', {
                                    src: '/UploadedFiles/' + document.name + document.extension,
                                    type: 'application/pdf',
                                    width: '100%',
                                    height: '500px',
                                    class: 'mb-2'
                                });
                                embedList.append(embedElement);
                            });
                            embedContainer.show();
                            closeButton.show();
                        } else {
                            alert('No se encontraron documentos.');
                            closeButton.hide();
                        }
                    } else {
                        alert(response.message);
                    }
                }
            });
        }
        function cerrarEmbed(orderNumber) {
            $.ajax({
                url: '@Url.Action("CerrarEmbed", "Files")',
                type: 'POST',
                data: { orderNumber: orderNumber },
                success: function (response) {
                    if (response.success) {
                        var embedContainer = $('#embed-container-' + orderNumber);
                        var closeButton = $('button[onclick="cerrarEmbed(' + orderNumber + ')"]');
                        embedContainer.hide();
                        closeButton.hide();
                    } else {
                        alert('Error al cerrar el embed.');
                    }
                }
            });
        }
    </script>
}