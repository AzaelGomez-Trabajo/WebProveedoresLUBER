@model WebProveedoresN.Entities.Usuario;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="row justify-content-center mt-5">
        <div class="col-5">
            <div class="card">
                <div class="card-header"><h3 class="text-center">Login</h3></div>
                <div class="card-body">

                    <form asp-controller="Access" asp-action="Login" method="post">

                        <div class="mb-3">
                            <label class="form-label">Correo</label>
                            <input type="email" class="form-control" asp-for="Correo" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Contraseña</label>
                            <input type="password" class="form-control" asp-for="Clave" required />
                        </div>
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-danger">
                                @ViewBag.Message
                            </div>
                        }

                        <div class="mb-3">
                            <div class="d-grid">
                                <button class="btn btn-outline-primary" type="submit">Ingresar </button>
                                <a class="btn btn-link" href="@Url.Action("Registrar","Start")">No tienes una cuenta? Registrate!</a>
                                <a class="btn btn-link" href="@Url.Action("Restablecer","Start")">Has olvidado tu contraseña?</a>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>