@model UserModel
@{
    ViewData["Title"] = "Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(Model is null)
{
    <p class="text-danger">No se encontró el usuario.</p>
}
else
{
    <div class="card">
        <div class="card-header">
            <span class="fs-2">
                <i class="bi bi-person-circle"></i>
                @Model.FullName
            </span>
            <form asp-action="" method="post">
                <div class="d-flex justify-content-end">
                    <a class="btn btn-outline-primary" asp-action="EditProfile" asp-controller="User">Editar Perfil</a>
                    <a class="btn btn-outline-primary" asp-action="ChangePassword" asp-controller="User">Cambiar Contraseña</a>
                </div>
            </form>
        </div>
    </div>
}